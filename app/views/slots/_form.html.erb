<div class="col-sm-12">
<%= form_with(model: slot, local: true, class: "form-horizontal") do |form| %>
  <% if slot.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(slot.errors.count, "error") %> prohibited this slot from being saved:</h2>

      <ul>
      <% slot.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <label class="col-sm-2 control-label">
      <%= form.label :start_time, "Start Time" %>      
    </label>
    <div class="date col-sm-6 datetimepicker" id="">
      <%= form.datetime_field :start_time, id: :slot_start_time, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 control-label">
      <%= form.label :end_time %>
    </label>
    <div class="date col-sm-6 datetimepicker" id="">
      <%= form.datetime_field :end_time, id: :slot_end_time,  class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2"></label>
    <div class="col-sm-10"> 
      <%= form.submit "Submit", class: "btn btn-default" %>
    </div> 
  </div>
  
<% end %>
</div>

