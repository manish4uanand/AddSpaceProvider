<%= form_for @bid, url: {controller: "bids", action: "create", class: "form-horizontal"} do |form| %>
  <% if bid.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bid.errors.count, "error") %> prohibited this bid from being saved:</h2>
      <ul>
      <% bid.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <label class="control-label col-sm-2">
      <%= form.label :bid_price %>      
    </label>
    <div class="col-sm-10">
      <%= form.text_field :bid_price, id: :bid_bid_price, class: "form-control" %>      
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 control-label">Slot</label>
    <div class="col-sm-10 row">
      <span class="col-sm-5"><b>Start Time</b> <%= @slot.start_time %></span>
      <span class="col-sm-5"><b>End Time</b> <%= @slot.end_time %></span>
    </div>
  </div>

  <%= hidden_field_tag :slot_id, @slot.id  %>
  <%= hidden_field_tag :bidder, current_user.id  %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10"> 
      <%= form.submit "Bid", class: "btn btn-primary" %>
    </div> 
  </div>
<% end %>
